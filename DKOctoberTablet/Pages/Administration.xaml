        <Button Margin="92,211,0,0" Background="#EA226A" Width="215" Height="100" CornerRadius="25" BorderThickness="6" BorderBrush="White" Tapped="BackTapped" VerticalAlignment="Top">
            <TextBlock FontSize="24" FontWeight="SemiBold" Foreground="White" Text="Документы" />
