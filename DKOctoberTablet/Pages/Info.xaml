<Page
    x:Class="DKOctoberTablet.Pages.Info"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:pages="using:DKOctoberTablet.Pages"
    mc:Ignorable="d"
    Background="Transparent">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="130"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0">Main Content</TextBlock>
        <!--<Button Grid.Column="1" Background="HotPink" Width="300" Height="200" windows10Version1809:CornerRadius="5" Tapped="TestTapped">
            <TextBlock FontSize="60" FontWeight="SemiBold" Foreground="White" Text="Test" />
        </Button>-->
        <pages:Poster Grid.Row="1" Margin="85 20 0 20" Width="500" HorizontalAlignment="Left"
                      MainFrame="{x:Bind _mainFrame, Mode=OneWay}"></pages:Poster>
    </Grid>
</Page>
