        <Button Grid.Row="1" Margin="92,863,0,0" Background="#EA226A" Width="200" Height="90" CornerRadius="25" BorderThickness="6" BorderBrush="White" Tapped="BackTapped" VerticalAlignment="Top">
            <TextBlock FontSize="24" FontWeight="SemiBold" Foreground="White" Text="Назад" />
        </Button>
        <Button Grid.Row="1" Margin="326,863,0,0" Background="#EA226A" Width="200" Height="90" CornerRadius="25" BorderThickness="6" BorderBrush="White" Tapped="BackTapped" VerticalAlignment="Top">
            <TextBlock FontSize="24" FontWeight="SemiBold" Foreground="White" Text="Главная" />
        </Button>
    </Grid>
